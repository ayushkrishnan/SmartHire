{
    "watch": [
        "src"
    ],
    "ext": "ts",
    "ignore": [
        "src/**/*.spec.ts"
    ],
    "exec": "tsc && node dist/server.js",
    "events": {
        "restart": "echo 'TypeScript recompiling and server restarting...'"
    },
    "env": {
        "POSTGRES_USER": "postgres",
        "POSTGRES_PASSWORD": "password",
        "POSTGRES_DB": "smarthire"
    }
}